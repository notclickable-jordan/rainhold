POSTFIX_myhostname={{ lemmy_postfix_hostname }}
POSTFIX_smtp_sasl_auth_enable=yes
POSTFIX_smtp_sasl_password_maps=static:{{ mailrise_username }}@{{ mailrise_hostname }}:{{ mailrise_password }}
POSTFIX_smtp_sasl_security_options=noanonymous
POSTFIX_smtp_use_tls=yes
POSTFIX_smtp_tls_security_level=encrypt
POSTFIX_header_size_limit=4096000
POSTFIX_relayhost=[{{ mailrise_hostname }}]:{{ mailrise_port }}